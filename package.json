{
  "name": "hintgrid",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run test:run && next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:build": "npm run typecheck && npm run build",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:integration:coverage": "vitest run --coverage --config vitest.integration.config.ts",
    "test:all": "npm run test:run && npm run test:integration",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed --workers=1",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:deployed": "BASE_URL=https://hintgrid.com playwright test",
    "test:e2e:deployed:headed": "BASE_URL=https://hintgrid.com playwright test --headed --workers=1",
    "prepare": "husky",
    "firebase:emulators": "firebase emulators:start",
    "predeploy": "npm run test:with-emulator",
    "deploy": "npm run build && firebase deploy",
    "test:with-emulator": "firebase emulators:exec --only auth,database \"npm run test:all\"",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only database",
    "cleanup:rooms": "node scripts/cleanup-rooms.js",
    "cleanup:orphaned-public-rooms": "node scripts/cleanup-orphaned-public-rooms.js"
  },
  "dependencies": {
    "bad-words-next": "^3.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "emoji-picker-react": "^4.17.3",
    "firebase": "^12.8.0",
    "next": "^16.1.6",
    "qrcode.react": "^4.2.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "use-sound": "^5.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.24",
    "firebase-admin": "^12.7.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
